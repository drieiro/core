#!/bin/sh

dir="/media/Pictures/Wallpapers/wall" # Set wallpapers directory

pic=$(find $dir/* -type f | shuf -n 1)

if ps -e | grep -qi "gnome"; then
    PID=$(pgrep -o gnome-session)
    #DBUS_SESSION_BUS_ADDRESS="$(grep -z DBUS_SESSION_BUS_ADDRESS /proc/"$PID"/environ|cut -d= -f2-)"
    IFS== read -d '' _ DBUS_SESSION < <(grep -z DBUS_SESSION_BUS_ADDRESS /proc/$PID/environ | cut -d= -f2-)
    export DBUS_SESSION_BUS_ADDRESS
    /usr/bin/gsettings set org.gnome.desktop.background picture-uri "file://$pic"
    /usr/bin/gsettings set org.gnome.desktop.background picture-uri-dark "file://$pic"
else
    type feh >/dev/null 2>&1 || (echo "feh no estÃ¡ instalado." && exit 1)
    feh --bg-fill "$pic"
    type notify-send >/dev/null 2>&1 && notify-send "Wallpaper actualizado"
fi
